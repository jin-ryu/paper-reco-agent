# ===== API 키 설정 =====
# DataON 및 ScienceON API 키를 설정하세요
DATAON_SEARCH_KEY=your_dataon_search_key_here
DATAON_META_KEY=your_dataon_meta_key_here
SCIENCEON_CLIENT_ID=your_scienceon_client_id_here
SCIENCEON_ACCOUNTS=your_scienceon_accounts_here

# ===== 모델 설정 =====
# 언어모델 선택 (소규모 모델 권장)
MODEL_NAME=upstage/SOLAR-10.7B-Instruct-v1.0
MODEL_CACHE_DIR=./models

# 양자화 설정 (메모리 최적화)
# fp16: ~21GB VRAM (고사양)
# int8: ~11GB VRAM (중사양) - 권장
# int4: ~6GB VRAM (저사양)
QUANTIZATION=int8

# GPU 메모리 사용률 (0.0 ~ 1.0)
GPU_MEMORY_UTILIZATION=0.9

# LLM 생성 파라미터
MAX_TOKENS=512
TEMPERATURE=0.1

# 개발 모드 (GPU 없을 때 Mock 모델 사용)
DEV_MODE=false

# ===== 임베딩 모델 설정 =====
# E5 모델: 다국어 지원, 한/영 논문 검색 최적화
# 기본: intfloat/multilingual-e5-large (KURE Recall 0.658, NDCG 0.628)
# 고급: intfloat/multilingual-e5-large-instruct (instruction 지원)
# 한국어 특화: nlpai-lab/KoE5 (+3% 성능)
EMBEDDING_MODEL=intfloat/multilingual-e5-large

# ===== 서버 설정 =====
HOST=0.0.0.0
PORT=8000
DEBUG=false

# ===== 로깅 설정 =====
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
